---
import "../styles/global.css";
---

<section>
    <header class="w-full mb-8 p-4 md:p-0">
        <h2 class="text-3xl font-bolds">Servicios</h2>
    </header>

    <div class="w-full pl-4 md:pl-0 grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Tarjeta 1 -->
        <article
            class="relative w-full aspect-square rounded-3xl bg-white/40 bg-center bg-no-repeat overflow-hidden"
            style="background-image: url('/images/services/services-1.webp'); background-size: cover;"
        >
            <a
                href="#"
                class="w-full h-full flex flex-col justify-between items-center p-4 sm:p-6 rounded-3xl hover:bg-white/30 transition-all duration-300"
            >
                <h3
                    class="text-lg sm:text-xl md:text-2xl text-center text-white mt-2 sm:mt-4"
                >
                    Alineación/Corrección de bombas/Balanceo de ruedas
                </h3>
                <span
                    class="text-white text-base sm:text-lg font-medium underline mb-2 sm:mb-4"
                >
                    Ver más
                </span>
            </a>
        </article>

        <!-- Tarjeta 2 -->
        <article
            class="relative w-full aspect-square rounded-3xl bg-white/40 bg-center bg-no-repeat overflow-hidden"
            style="background-image: url('/images/services/services-tren-delantero.webp'); background-size: cover;"
        >
            <a
                href="#"
                class="w-full h-full flex flex-col justify-between items-center p-4 sm:p-6 rounded-3xl hover:bg-white/30 transition-all duration-300"
            >
                <h3
                    class="text-lg sm:text-xl md:text-2xl text-center text-white mt-2 sm:mt-4"
                >
                    Tren delantero
                </h3>
                <span
                    class="text-white text-base sm:text-lg font-medium underline mb-2 sm:mb-4"
                >
                    Ver más
                </span>
            </a>
        </article>

        <!-- Tarjeta 3 -->
        <article
            class="relative w-full aspect-square rounded-3xl bg-white/40 bg-center bg-no-repeat overflow-hidden"
            style="background-image: url('/images/services/services-tren-trasero.webp'); background-size: cover;"
        >
            <a
                href="#"
                class="w-full h-full flex flex-col justify-between items-center p-4 sm:p-6 rounded-3xl hover:bg-white/30 transition-all duration-300"
            >
                <h3
                    class="text-lg sm:text-xl md:text-2xl text-center text-white mt-2 sm:mt-4"
                >
                    Tren Trasero
                </h3>
                <span
                    class="text-white text-base sm:text-lg font-medium underline mb-2 sm:mb-4"
                >
                    Ver más
                </span>
            </a>
        </article>

        <!-- Botón "Ver todos los servicios" -->
        <article
            class="relative w-full h-16 md:col-span-3 flex items-center justify-center rounded-3xl bg-white/40 hover:bg-white/30 transition-all duration-300"
        >
            <a
                href="#"
                class="text-lg sm:text-xl md:text-2xl font-medium text-white"
            >
                Ver todos los Servicios
            </a>
        </article>
    </div>
</section>
