---
import "../../styles/global.css";
---

<section class="flex flex-col items-center w-full min-h-[400px] md:min-h-[300px] mb-20">
    <div class="grid grid-cols-1 md:grid-cols-2 text-center w-full min-h-[400px] md:min-h-[300px] gap-4">
        <!-- Ubicación -->
        <article class="flex flex-col justify-between h-full w-full">
            <header>
                <h2 class="mb-4 text-2xl">Ubicación</h2>
            </header>
            <div class="flex-1 flex items-center justify-center">
                <a href="https://maps.app.goo.gl/koSWJBGtDbuKbfvv6" target="_blank" class="w-full h-full">
                    <img src="/images/maps.webp"
                        alt="Ubicación de Ross Suspension en Google Maps"
                        class="w-full h-full min-h-[250px] md:min-h-[150px] rounded-3xl object-cover" />
                </a>
            </div>
        </article>

        <!-- Tarjetas -->
        <article class="flex flex-col justify-between h-full w-full">
            <header>
                <h2 class="mb-4 text-2xl">Tarjetas</h2>
            </header>
            <div class="flex-1 flex flex-col items-center justify-center gap-6 bg-white rounded-3xl p-4">
                <p class="text-lg text-gray-800 text-center">
                    Consultar promociones con el Banco Macro
                </p>
                <div class="flex gap-8">
                    <img src="/images/targets/visa.svg" alt="Visa" class="h-24 md:h-16" />
                    <img src="/images/targets/mastercard.svg" alt="Mastercard" class="h-24 md:h-16" />
                </div>
                <img src="/images/targets/macro.svg" alt="Banco Macro" class="h-28 md:h-20" />
            </div>
        </article>
    </div>
</section>
